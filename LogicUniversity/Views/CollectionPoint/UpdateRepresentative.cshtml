@model IEnumerable<LogicUniversity.Models.Employee>
@{
    ViewBag.Title = "UpdateRepresentative";
    var deptId = (int)ViewData["deptid"];
    var currentRepresentative = (string)ViewData["representative"];

}

@{
    Layout = "~/Views/Shared/_Layout_DH.cshtml";
}
<html>

<head>
    <script>
        function back() {
           window.location.href = '@Url.Action("ManageCollection", "CollectionPoint")'
        }
    </script>

</head>

<body>
    <p></p>
    <p></p>

    <div class="container-fluid py-4">
        <h4 class="text-center text-uppercase">Update Representative</h4>
        <p></p>
    </div>

    <br />

    <div class=" text-none" style="margin-top:50px;margin-bottom:30px">
        @Html.Label("Current Representative:   ")
        <b>@currentRepresentative</b>
    </div>

    @using (Html.BeginForm("SaveChangedDepartmentrepresentative", "CollectionPoint", FormMethod.Post, new { id = "TheForm" }))
    {

        <div class="form-group  ">
            @Html.Label("New Representatives", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("EmployeeId")
                <br /><br />
            </div>
            <div>
                <div style="float:left;margin-left:200px"><input type="button" name="Back" value="Back" onclick="back()" /></div>
                <input type="submit" value="Update" name="update" style="float:right;margin-right:200px" />

            </div>
        </div>
        <br />

    }

</body>

</html>
