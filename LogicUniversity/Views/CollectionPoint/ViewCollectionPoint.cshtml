@model IEnumerable<LogicUniversity.Models.CollectionPoint>

@{
    ViewBag.Title = "ViewCollectionPoint";
}
@{
    string sessionId = (string)ViewData["sessionId"];
    string role = (string)ViewData["role"];
}
@if (role == "STORE_CLRK")
{
    Layout = "~/Views/Shared/_Layout_SC.cshtml";
}
else if (role == "STORE_MNGR")
{
    Layout = "~/Views/Shared/_Layout_SM.cshtml";
}
else if (role == "STORE_SUP")
{
    Layout = "~/Views/Shared/_Layout_SS.cshtml";
}

<br /><br />
<h3>View Collection Point</h3>

<p>
    @Html.ActionLink("Add New", "CreateNewCollectionPoint", new { sessionId = sessionId })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LocationName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Day)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>

        <th>
            @Html.Label("Assigned Store Clerk")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LocationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Day)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Employee.EmployeeName)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditCollectionPointDetails", new { id = item.CollectionPointId, sessionId = sessionId }) |
                @Html.ActionLink("Details", "GetCollectionPointDetails", new { id = item.CollectionPointId, sessionId = sessionId }) |
                @Html.ActionLink("Delete", "DeleteCollectionPoint", new { id = item.CollectionPointId, sessionId = sessionId })
            </td>
        </tr>
    }

</table>
