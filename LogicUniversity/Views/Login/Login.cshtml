@model LogicUniversity.Models.Employee

@{
    ViewBag.Title = "Login";
}
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{



    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    if (@ViewBag.Message != null)
    {
        <div style="border: 1px solid red">
            @ViewBag.Message
        </div>
    }

    <!-- Header -->
    <header class="masthead d-flex">
        <div class="container text-center my-auto">
            <h1 class="heading">Logic University</h1>
            <h3 class="mb-5">
                <em>Stationary Inventory Management Portal</em>
            </h3>
            <div class="container">
                <div class="row">
                    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                        <div class="card card-signin my-5">
                            <div class="card-body">
                                <h5 class="card-title text-center">Sign In</h5>
                                <form class="form-signin" >
                                    <div class="form-label-group">
                                        <hr class="my-4">

                                        <label for="inputEmail">Email address</label>
                                        <label>@Html.TextBoxFor(a => a.Username, new { @class = "form-control" })</label>
                                        <label>@Html.ValidationMessageFor(a => a.Username)</label> <br />


                                        <label for="inputPassword">Password</label>
                                        <label> @Html.PasswordFor(a => a.Password, new { @class = "form-control" })</label>
                                        <label>@Html.ValidationMessageFor(a => a.Password)</label>
                                    </div>

                                    <div class="custom-control custom-checkbox mb-3">
                                        <input type="checkbox" class="custom-control-input" id="customCheck1">
                                        <label class="custom-control-label" for="customCheck1">Remember password</label>
                                    </div>
                                    <hr class="my-4">
                                    <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Sign in</button>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="overlay"></div>
    </header>


    <style>

        body {
            background-image: url(/img/Login_bg.jpg);
            background-repeat: no-repeat;
            background-size: cover;
        }

        .label {
            float: left;
        }

        .heading {
            color: white;
            font-style: oblique;
        }
    </style>

}  