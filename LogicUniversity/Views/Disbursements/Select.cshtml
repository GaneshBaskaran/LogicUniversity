@using LogicUniversity.Models
@model Retrieval
@{
    ViewBag.Title = "Select";
    var rList = (List<Retrieval>)ViewData["rList"];
    var dList = (List<Department>)ViewData["dList"];
    var rListCount = (int)ViewData["rListCount"];
    var dListCount = (int)ViewData["dListCount"];
}

<h2>DisplayDisbursement</h2>
@using (Html.BeginForm("Select", "Disbursements"))

{
    @Html.AntiForgeryToken()
    <input type="hidden" name="dListCount" id="dListCount" value=@dListCount />
    <input type="hidden" name="rListCount" id="rListCount" value=@rListCount />
    <table>
        <thead>
        <td>Retrieval ID</td></thead>
        @{
            //To make unique Id
            int i = 0;
            foreach (var item in rList)
            {
                <tr>
                    <td>
                        <input type="radio" name="Retrieval[@i]" id="Retrieval[@i]" value=@Html.DisplayFor(model => item.RetrievalId) />
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.RetrievalId)
                    </td>
                </tr>
                i++;
            }
        }

    </table>
    <table>
        @{
            //To make unique Id
            int j = 0;
            foreach (var item in dList)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="Department[@j]" id="Department[@j]" value=@Html.DisplayFor(model => item.DeptName) />
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.DeptName)
                    </td>
                </tr>
                i++;
            }
        }
    </table>
    <input type="submit" id="submit" name="submit" />
}

