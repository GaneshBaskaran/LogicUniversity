@model IEnumerable<LogicUniversity.Models.Disbursement>
@{ 
    string sessionId = (string)ViewData["sessionId"];
}
@{
    ViewBag.Title = "Index";
}
@{
    Layout = "~/Views/Shared/_Layout_SC.cshtml";
}
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create",new { sessionId = sessionId })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CollectionPoint.LocationName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Representative.EmployeeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateDisbursed)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CollectionPoint.LocationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Representative.EmployeeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateDisbursed)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.DisbursementId ,sessionId=sessionId}) |
                @Html.ActionLink("Details", "Details", new { id = item.DisbursementId, sessionId = sessionId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.DisbursementId, sessionId = sessionId })
            </td>
        </tr>
    }

</table>
